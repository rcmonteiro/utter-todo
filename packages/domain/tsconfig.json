{
  "extends": "@utter-todo/typescript-config/node.json",
  "include": [
    "src/**/*",
    "tests/**/*",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "vitest/globals"
    ],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules"
  ]
}
